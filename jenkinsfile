pipeline
{
  agent any
  stages
  {
    stage ('scm checkout')
    {
      steps
          { git 'https://github.com/SagarPatil1086/maven-project.git' }
    }
    stage ('compile code')
    {
      steps
          {
            withMaven(jdk: 'localJdk', maven: 'localMVN') {
              sh 'mvn compile'
            }
          }
    } 
    stage ('test code')
    {
      steps
          {
            withMaven(jdk: 'localJdk', maven: 'localMVN') {
              sh 'mvn test'
            }
          }
    } 
    stage ('package code')
    {
      steps
          {
            withMaven(jdk: 'localJdk', maven: 'localMVN') {
              sh 'mvn package'
            }
          }
    } 
  }
}
